source 'https://rubygems.org'

gem 'rails',			'3.2.1'

group :development do
  gem 'sqlite3',		'1.3.5'
  gem 'rspec-rails',	'2.8.1'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
	gem 'capybara',		'1.1.2'
end

group :production do
	gem 'pg',			'0.12.2'
end
